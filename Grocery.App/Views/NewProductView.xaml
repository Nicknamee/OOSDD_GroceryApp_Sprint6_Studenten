<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.NewProductView"
             x:DataType="vm:NewProductViewModel"
             Title="Nieuw product">
	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="12">
			<Label Text="Nieuw product" FontSize="24" HorizontalOptions="Center" />

			<VerticalStackLayout Spacing="6">
				<Label Text="Naam" />
				<Entry Text="{Binding Name}" Placeholder="Naam van het product" />
			</VerticalStackLayout>

			<VerticalStackLayout Spacing="6">
				<Label Text="Voorraad" />
				<Entry Text="{Binding StockText}" Keyboard="Numeric" Placeholder="0" />
			</VerticalStackLayout>

			<VerticalStackLayout Spacing="6">
				<Label Text="THT datum" />
				<DatePicker Date="{Binding ShelfLife}" MinimumDate="{x:Static sys:DateTime.Today}" />
			</VerticalStackLayout>

			<VerticalStackLayout Spacing="6">
				<Label Text="Prijs" />
				<Entry Text="{Binding PriceText}" Keyboard="Numeric" Placeholder="0.00" />
			</VerticalStackLayout>

			<Label Text="{Binding ErrorMessage}" TextColor="Red" />

			<HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
				<Button Text="Opslaan" Command="{Binding SaveCommand}" />
				<Button Text="Annuleren" Command="{Binding CancelCommand}" />
			</HorizontalStackLayout>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>